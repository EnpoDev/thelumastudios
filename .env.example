# ===========================================
# LUMA STUDIOS - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in the values
# NEVER commit .env.local to version control!

# ===========================================
# DATABASE
# ===========================================
DATABASE_PATH=./database.sqlite

# ===========================================
# ADMIN AUTHENTICATION
# ===========================================
# Initial admin credentials (used only for first-time setup)
# IMPORTANT: Change these immediately after first login!
ADMIN_USERNAME=admin@lumastudios.com
ADMIN_PASSWORD=ChangeThisSecurePassword123!

# JWT Secret for session tokens (generate a random 64-char string)
# You can generate one with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session expiry in seconds (default: 7 days)
SESSION_EXPIRY=604800

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# GDPR/KVKK COMPLIANCE
# ===========================================
# Data retention period in days (default: 365)
DATA_RETENTION_DAYS=365

# Enable consent requirement for contact form
REQUIRE_CONSENT=true
